<%= form_with(model: @show, html: { class: 'form-horizontal' }) do |form| %>
 <div class="form-group">
    <%= form.label :name, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
 </div>

 <div class="form-group">
    <%= form.label :time, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.number_field :time, class: 'form-control' %>
    </div>
 </div>

 <div class="form-group">
    <%= form.label :runtime, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.number_field :runtime, class: 'form-control' %>
    </div>
 </div>

 <div class="form-group">
    <%= form.label :about, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.text_area :about, class: 'form-control' %>
    </div>
 </div>

 <div class="form-group">
    <%= form.label :gener, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.text_field :gener, class: 'form-control' %>
    </div>
 </div>

 <div class="form-group">
    <%= form.label :language_id, class: 'control-label col-sm-2 mt-2' %>
    <div class="col-sm-10">
      <%= form.collection_select :language_id, Language.all, :id, :title, prompt: true, class: 'form-control' %>
    </div>
 </div>

 <div class="form-group">
    <%= form.label :theater_id, class: 'control-label col-sm-2 mt-2' %>
    <div class="col-sm-10">
      <%= form.collection_select :theater_id, Theater.all, :id, :name, prompt: true, class: 'form-control' %>
    </div>
 </div>

 <div class="form-group">
  <%= form.label :image,class: 'control-label col-sm-2 mt-2'  %>
    <div class="col-sm-10">
  <%= form.file_field :image %>
    </div>
  </div>


 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 mt-2">
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    </div>
 </div>
<% end %>
