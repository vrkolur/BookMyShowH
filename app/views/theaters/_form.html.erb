<%= form_with(model: theater) do |form| %>
    <%if theater && theater.errors.any?%>
        <div style="color: red">
        <h2><%= pluralize(theater.errors.count, "error") %> prohibited this theater from being saved:</h2>

        <ul>
        <% theater.errors.each do |error| %>
            <li><%= error.full_message %></li>
        <%end%>
    <%end%>

    <div class="form-group">
        <%= form.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= form.text_field :name, class: 'form-control', id: :theater_name %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :location_id, "Location", class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= form.collection_select :location_id, Location.all, :id, :name, { prompt: true }, { class: 'form-control' } %>
        </div>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="form-group">
        <div class="d-flex col-sm-offset-2 col-sm-10 mt-2 ">
            <%= form.submit  %>
        </div>
    </div>
<% end %>